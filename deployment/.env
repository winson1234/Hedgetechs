# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values:
# cp env.template .env

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=brokerage

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=your_redis_password_here

# ============================================
# JWT
# ============================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY_HOURS=24

# ============================================
# MT5 FOREX DATA (REQUIRED FOR FOREX PERSISTENCE)
# ============================================
# Option 1: Using ngrok (Windows laptop with ngrok tunnel)
WINDOWS_API_URL= https://condemnably-recognisable-mercedez.ngrok-free.dev

# Option 2: Direct IP (Windows server with public IP)
# WINDOWS_API_URL=http://YOUR_WINDOWS_IP:5000

# Option 3: Local development
# WINDOWS_API_URL=http://host.docker.internal:5000

# ============================================
# PAYMENT PROCESSING
# ============================================
STRIPE_SECRET_KEY=sk_live_xxxxx
NOWPAYMENTS_API_KEY=your_nowpayments_key

# ============================================
# MARKET DATA
# ============================================
MARKET_DATA_PROVIDER=hybrid
TWELVE_DATA_API_KEY=your_twelve_data_api_key
TWELVE_DATA_POLL_INTERVAL=15m
ENABLE_EXTERNAL_FETCH=true

# ============================================
# EMAIL
# ============================================
RESEND_API_KEY=re_xxxxx
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ============================================
# AWS FACE LIVENESS
# ============================================
AWS_AI_ACCESS_KEY=your_aws_access_key
AWS_AI_SECRET_KEY=your_aws_secret_key
AWS_AI_REGION=us-east-1

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=production

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# FRONTEND BUILD ARGS
# ============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
VITE_API_URL=https://api.yourdomain.com
APP_URL=https://yourdomain.com
WEBHOOK_URL=https://api.yourdomain.com/webhook
