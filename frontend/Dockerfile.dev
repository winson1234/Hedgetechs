# Development Dockerfile for React frontend with Vite hot-reloading
FROM node:20-alpine

# Enable pnpm via corepack
RUN corepack enable && corepack prepare pnpm@latest --activate

# Create non-root user for security
RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies with cache mount
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

# Create certs directory for HTTPS support
RUN mkdir -p /app/certs && chown -R appuser:appgroup /app

# Switch to non-root user
USER appuser

# Source code and certificates will be mounted as volumes for hot-reloading
# Certificates should be mounted to /app/certs/
# No need to COPY source code here

# Expose Vite dev server port (HTTPS)
EXPOSE 5173

# Start Vite dev server with --host to make it accessible from outside the container
# Vite will auto-detect certificates in /app/certs/ directory
CMD ["pnpm", "run", "dev", "--host"]
